<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .top_nav {
            background-color: #FF6601;
            color: #FFFFFF;
            font-family: Tahoma;
            font-family: Tahoma;
            padding: 20px;
            padding: 20px;
            text-align: center;
            border: 1px solid black;
        }

        .bot_nav {
            background-color: #BE0001;
            color: #FFFFFF;
            font-family: Tahoma;
            font-family: Tahoma;
            border: 1px solid black;
            display: flex;
            padding: 5px;
            justify-content: right;
            align-items: center;
        }

        ul {
            list-style: none;
            display: flex;
        }

        li {
            margin-right: 5px;
            border-right: 1px solid white;
            padding-right: 5px;
        }

        ul li:last-child {
            border-right: none;
        }
    </style>
</head>
<body>
    <div>
        <div class="top_nav container ">
            <h1>BÀI KIỂM TRA ĐIỀU KIỆN SỐ 2</h1>
        </div>
        <div class="bot_nav container">
            <ul class="justify-content-end">
                <li>@Html.ActionLink("Xem danh sách", "Xemdanhsach", "HocSinhs", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Thêm dữ liệu", "Themdulieu", "HocSinhs", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        @Html.ActionLink("Go to Index page", "index", "quanlyhocvien")
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>